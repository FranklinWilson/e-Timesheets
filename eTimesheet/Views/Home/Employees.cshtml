@model IEnumerable<Employee>
@{
    ViewData["Title"] = "Employees";
}

<h1>Employees</h1>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Name</th>
            <th>Wage</th>
            <th>Email</th>
            <th></th>
        </tr>
    </thead>
    @if (Model != null && Model.Any())
    {
        <tbody>
            @foreach (var emp in Model)
            {
                <tr>
                    <td>@emp.Name</td>
                    <td>@emp.Wage:C</td>
                    <td>@emp.Email</td>
                    <td>
                        <a asp-action="EmployeeDetails" asp-route-id="@emp.Id" class="btn btn-info btn-sm">View</a>
                        <a asp-action="EditEmployee" asp-route-id="@emp.Id" class="btn btn-warning btn-sm">Edit</a>
                        <a asp-action="DeleteEmployee" asp-route-id="@emp.Id" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    }
</table>

@if (Model == null || !Model.Any())
{
    <div class="d-flex justify-content-center mb-3">
        <p class="lead">No Employees</p>
    </div>
}

<div class="d-flex justify-content-center">
    <a class="btn btn-primary w-25" asp-action="CreateEmployee">New Employee</a>
</div>
