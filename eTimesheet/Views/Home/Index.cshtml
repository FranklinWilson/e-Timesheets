@{
    ViewData["Title"] = "Welcome";
}

<style>
    html, body {
        height: 100%;
        overflow: hidden;
    }
</style>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 text-center">
            <h1 class="display-4 fw-bold">WEF Engineering Timesheets</h1>

            @if (!User.Identity.IsAuthenticated)
            {
                <p class="lead mt-5">Please log in or register to begin tracking your work hours.</p>
                <div class="mt-4 d-flex justify-content-center gap-3">
                    <a href="/Identity/Account/Login" class="btn btn-primary btn-lg px-4">Login</a>
                    <a href="/Identity/Account/Register" class="btn btn-outline-secondary btn-lg px-4">Register</a>
                </div>
            }
            else
            {
                <p class="lead mt-5">Welcome to your timesheet management system, lets get started.</p>
                <div class="mt-4">
                    <a href="/Timesheets" class="btn btn-success btn-lg px-4">View Timesheets</a>
                </div>
            }
        </div>
    </div>
</div>
